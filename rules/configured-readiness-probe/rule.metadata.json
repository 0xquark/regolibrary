{
    "name": "configured-readiness-probe",
    "attributes": {
      "armoBuiltin": true
    },
    "ruleLanguage": "Rego",
    "match": [
      {
        "apiGroups": [
          "*"
        ],
        "apiVersions": [
          "*"
