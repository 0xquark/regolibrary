{
  "name": "exec-into-container",
  "attributes": {
    "m$K8sThreatMatrix": "Privilege Escalation::Exec into container",
    "armoBuiltin": true
  },
  "ruleLanguage": "Rego",
  "match": [
    {
      "apiGroups": [
        "*"
      ],
      "apiVersions": [
        "*"
      ],
      "resources": [
        "Role",
        "ClusterRole",
        "ClusterRoleBinding",
        "RoleBinding"
      ]
    }
  ],
  "ruleDependencies": [
    {
      "packageName": "cautils"
    }
  ],
  "description": "determines which users have permissions to exec into pods",
  "remediation": "",
  "ruleQuery": "armo_builtins"
}