          "ReplicaSet",
          "DaemonSet",
          "StatefulSet",
          "Job",
          "Pod",
          "CronJob"
      ]
    }
  ],
  "ruleDependencies": [
  ],
  "configInputs": [
    "settings.postureControlInputs.memory_request_max",
