{
    "name": "pod-specific-version-tag",
    "attributes": {
      "armoBuiltin": true
    },
    "ruleLanguage": "Rego",
    "match": [
      {
        "apiGroups": [
          ""
        ],
        "apiVersions": [
          "v1"
        ],
        "resources": [
          "Pod"
        ]
      },
      {
        "apiGroups": [
          "apps"
        ],
        "apiVersions": [
          "v1"
        ],
        "resources": [
            "Deployment",
            "ReplicaSet",
            "DaemonSet",
            "StatefulSet"
        ]
      },
      {
        "apiGroups": [
          "batch"
        ],
        "apiVersions": [
          "*"
        ],
        "resources": [
            "Job",
            "CronJob"
        ]
      }
    ],
    "ruleDependencies": [
    ],
    "description": "Fails if container has image tag set to latest",
    "remediation": "Make sure you define a specific image tag for container and not 'latest'.",
    "ruleQuery": "armo_builtins"
}