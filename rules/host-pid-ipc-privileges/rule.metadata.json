{
    "name": "host-pid-ipc-privileges",
    "attributes": {
      "armoBuiltin": true
    },
    "ruleLanguage": "Rego",
    "match": [
      {
        "apiGroups": [
          "*"
        ],
        "apiVersions": [
          "*"
        ],
        "resources": [
          "Deployment",
          "ReplicaSet",
          "DaemonSet",
          "StatefulSet",
          "Job",
          "Pod",
          "CronJob"
        ]
      }
    ],
    "ruleDependencies": [
    ],
    "description": "fails if pod has hostIPC/hostPID enabled",
    "remediation": "Make sure that the fields hostIPC and hostPID in the pod spec are not set to true (set to false or not present)",
    "ruleQuery": "armo_builtins"
}